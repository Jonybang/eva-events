'use strict';
console.log('forums');
angular.module('app.forums', ['ui.router'])
        .config(['$urlRouterProvider', '$stateProvider', '$locationProvider', function($urlRouterProvider, $stateProvider, $locationProvider) {

            <% @forum_templates_path = 'angular/modules/forums/templates/' %>
            <% @events_templates_path = 'angular/modules/events/templates/' %>
            <% @news_templates_path = 'angular/modules/news/templates/' %>

            $stateProvider
                    .state('app.organizations.show.forums', {
                        url: '/forums',
                        templateUrl: '<%= asset_path(@forum_templates_path + 'index.html') %>',
                        controller: 'ForumsCtrl as forumsCtrl'
                    })
                    .state('app.organizations.show.forums.show', {
                        url: '/:forumId',
                        templateUrl: '<%= asset_path(@forum_templates_path + 'show.html') %>',
                        controller: 'ForumsShowCtrl as forum',
                        redirectTo: 'app.organizations.show.forums.show.events'
                    })
                    .state('app.organizations.show.forums.show.settings', {
                        url: '/settings',
                        templateUrl: '<%= asset_path(@forum_templates_path + 'settings.html') %>',
                        controller: 'ForumsFormCtrl'
                    })
                    .state('app.organizations.show.forums.show.news', {
                        url: '/news',
                        templateUrl: '<%= asset_path(@news_templates_path + 'index.html') %>',
                        controller: 'NewsCtrl'
                    })
                    .state('app.organizations.show.forums.show.events', {
                        url: '/events',
                        templateUrl: '<%= asset_path(@events_templates_path + 'index.html') %>',
                        controller: 'EventsCtrl'
                    })
                    .state('app.organizations.show.forums.show.table_events', {
                        url: '/table_events',
                        templateUrl: '<%= asset_path(@events_templates_path + 'table.html') %>',
                        controller: 'EventsCtrl'
                    });

        }]);