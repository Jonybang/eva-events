'use strict';

angular.module('app.events')
        .factory('EventEditor', ['$modal', '$q', function($modal, $q) {
            return function (inputs, event){
                if(event)
                    inputs.event_id = event.id;

                return $q(function(resolve, reject) {
                    var modalInstance = $modal.open({
                        animation: true,
                        templateUrl: '<%= asset_path('angular/modules/events/templates/modals/form.html') %>',
                        controller: 'EventsFormCtrl',
                        //size: size,
                        resolve: {
                            inputs: function(){
                                return inputs;
                            }
                        }
                    });

                    modalInstance.result.then(function (result) {
                        result.is_new = inputs.event_id ? false : true;
                        resolve(result);
                    }, function () {
                        reject('Cancel');
                    });
                });
            }
        }]);