app.controller('EventsFormCtrl', ['$scope', '$timeout', 'ForumEvent', 'EventType', '$modalInstance', 'object', function($scope, $timeout, ForumEvent, EventType, $modalInstance, object) {
    $timeout(function(){
        $scope.event = object;
    });

    EventType.query().then(function(types){
