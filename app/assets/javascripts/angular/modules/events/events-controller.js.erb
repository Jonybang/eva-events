app.controller('EventsFormCtrl', ['$scope', 'ForumEvent', 'EventType', '$modalInstance', 'inputs', function($scope, ForumEvent, EventType, $modalInstance, inputs) {
    $scope.event = {
    };

    if(inputs.event_id){
        ForumEvent.get(inputs.event_id).then(function(event){
            angular.extend($scope.event, event);
        })
    } else {
        angular.extend($scope.event, inputs);
    }

    EventType.query().then(function(types){
        $scope.event_types = types;
    });

    $scope.save = function() {
        $scope.$broadcast('show-errors-check-validity');
        if (!$scope.eventForm.$valid) {
            return;
        }

        var obj;
        //если id нет - значит это новый контакт
        if(!$scope.event.id)
            obj = new ForumEvent($scope.event).create();
        else
            obj = new ForumEvent($scope.event).update();

        obj.then(function success (result){
                    var event = result.resource ? result.resource : result;
                    $modalInstance.close(event);
                },
                function error (info){
                    $scope.errors = info.data.errors;
                });
    }
}]);