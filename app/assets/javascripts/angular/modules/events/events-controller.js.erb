'use strict';

var app = angular.module('app.events');

app.controller('EventsCtrl', ['$scope', 'Event', 'EventEditor', 'Helpers', '$state', '$modal', function($scope, Event, EventEditor, Helpers, $state, $modal) {
    $scope.newOrEdit = function (project_id, task, parent_task_id){
        //Добавляет или редактирует задачу или подзадачу
        //Если задача передана(task) - то редактируем её
        //Если нет - то создаем новую задачу в текущем проекте
        //Если вместе с задачей(task) передан id родительской задачи(parent_task_id)
        //то задача добавляется подзадачей в родительскую

        EventEditor({project_id: project_id, parent_task_id: parent_task_id}, task).then(function(result){
            if(result.is_new){
                $scope.projects.some(function(proj, index){
                    var isCurProj = proj.id == result.project_id;
                    if(isCurProj){
                        Project.get({id: proj.id}).then(function(project){
                            angular.extend($scope.projects[index], project);
                            redrawProjectsGantts($scope.projects[index]);
                        });
                    }
                    return isCurProj;
                });
            }
        });
    };
}]);


app.controller('EventsFormCtrl', ['$scope', 'ForumEvent', '$modalInstance', 'inputs', function($scope, ForumEvent, $modalInstance, inputs) {
    $scope.event = {
        event_data : {}
    };

    if(inputs.event_id){
        Event.get(inputs.event_id).then(function(event){
            angular.extend($scope.event, event);
        })
    }

    $scope.save = function() {
        $scope.$broadcast('show-errors-check-validity');
        if (!$scope.eventForm.$valid) {
            return;
        }

        var obj;
        //если id нет - значит это новый контакт
        if(!$scope.event.id)
            obj = new ForumEvent($scope.event).create();
        else
            obj = new ForumEvent($scope.event).update();

        obj.then(function success (result){
                    var event = result.resource ? result.resource : result;
                    $modalInstance.close(event);
                },
                function error (info){
                    $scope.errors = info.data.errors;
                });
    }
}]);